<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:background="#000"
            android:gravity="center"
            android:text="Resep Ransum"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/txt_header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="kamar"
                android:id="@+id/textView23"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Proporsi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="jumlah"
                android:id="@+id/text3"
                android:text="Harga"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView23"
                android:layout_toEndOf="@+id/textView23"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nama Bahan"
                android:id="@+id/text2"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/listResepHijauan"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/listResepHijauan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:id="@+id/relativeLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="kamar"
                android:id="@+id/text4"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Proporsi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="jumlah"
                android:id="@+id/text5"
                android:text="Harga"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/text4"
                android:layout_toEndOf="@+id/text4"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nama Bahan"
                android:id="@+id/text6"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/listResepEnergi"
                android:layout_below="@+id/text4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="kamar"
                android:id="@+id/text7"
                android:layout_gravity="center_horizontal"
                android:text="Proporsi"
                android:layout_below="@+id/listResepEnergi"
                android:layout_alignLeft="@+id/text4"
                android:layout_alignStart="@+id/text4"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:hint="jumlah"
                android:id="@+id/text8"
                android:text="Harga"
                android:layout_alignTop="@+id/text7"
                android:layout_alignLeft="@+id/text5"
                android:layout_alignStart="@+id/text5"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nama Bahan"
                android:id="@+id/text9"
                android:layout_alignTop="@+id/text7"
                android:layout_alignLeft="@+id/text6"
                android:layout_alignStart="@+id/text6"
                android:paddingTop="10dp"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/listResepProtein"
                android:layout_below="@+id/text7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="----------------------------------------------"
        android:id="@+id/textView5"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harga pakan tiap hari"
        android:id="@+id/textView6"
        android:layout_above="@+id/text_harga_bulan"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harga"
        android:id="@+id/harga_hari"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp"
        android:layout_above="@+id/text_harga_bulan"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harga pakan"
        android:id="@+id/text_harga_bulan"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harga"
        android:id="@+id/harga_bulan"
        android:layout_alignTop="@+id/text_harga_bulan"
        android:layout_alignLeft="@+id/harga_hari"
        android:layout_alignStart="@+id/harga_hari" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Keuntungan"
        android:id="@+id/text_keuntungan"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/text_harga_bulan"
        android:layout_alignLeft="@+id/text_harga_bulan"
        android:layout_alignStart="@+id/text_harga_bulan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harga"
        android:id="@+id/keuntungan"
        android:layout_alignTop="@+id/text_keuntungan"
        android:layout_alignLeft="@+id/harga_bulan"
        android:layout_alignStart="@+id/harga_bulan" />


</RelativeLayout>




    </ScrollView>
