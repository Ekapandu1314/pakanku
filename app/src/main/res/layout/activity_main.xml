    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:contentDescription="@string/Logo"
            android:src="@drawable/logo"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="41dp">

            <ImageView
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_gravity="center"
                android:id="@+id/BuatPakan"
                android:src="@drawable/pakan_button"
                android:contentDescription="@string/BuatButton"
                android:clickable="true"
                android:onClick="BuatClick"/>


            <ImageView
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_gravity="center"
                android:id="@+id/Informasi"
                android:src="@drawable/info_button"
                android:layout_toRightOf="@+id/BuatPakan"
                android:layout_toEndOf="@+id/BuatPakan"
                android:clickable="true"
                android:contentDescription="@string/InfoButton"
                android:onClick="InfoClick" />

            <ImageView
                android:layout_width="90dip"
                android:layout_height="90dip"
                android:layout_gravity="center"
                android:id="@+id/CekUntung"
                android:layout_toRightOf="@+id/Informasi"
                android:layout_toEndOf="@+id/Informasi"
                android:src="@drawable/untung_button"
                android:contentDescription="@string/CekUntung"
                android:clickable="true"
                android:onClick="UntungClick"/>
        </RelativeLayout>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
