<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_gravity="center_horizontal">

    <View
        android:layout_width="2dp"
        android:layout_height="35dp"
        android:id="@+id/divider"
        android:background="@color/Base"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/proporsi_resep"
        android:layout_toStartOf="@+id/proporsi_resep" />

    <View
        android:layout_width="2dp"
        android:layout_height="35dp"
        android:id="@+id/divider2"
        android:background="@color/Base"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/harga_bahan_resep"
        android:layout_toStartOf="@+id/harga_bahan_resep" />

    <View
        android:layout_width="2dp"
        android:layout_height="35dp"
        android:id="@+id/divider3"
        android:background="@color/Base"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/harga_resep"
        android:layout_toStartOf="@+id/harga_resep" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/nama"
        android:id="@+id/nama_bahan_resep"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/divider2"
        android:layout_toLeftOf="@+id/divider2" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/harga_bahan_resep"
        android:padding="5dp"
        android:gravity="end"
        android:textSize="12sp"
        android:text="@string/harga"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/divider"
        android:layout_toStartOf="@+id/divider"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/proporsi_resep"
        android:padding="5dp"
        android:gravity="end"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:text="@string/porsi"
        android:layout_centerHorizontal="true"
        android:layout_toStartOf="@+id/divider3"
        android:layout_toLeftOf="@+id/divider3" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/harga_resep"
        android:text="@string/biaya"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>



